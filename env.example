# Secure File Vault Environment Configuration
# Copy this file to .env and update the values for your deployment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Render will automatically provide DATABASE_URL for the PostgreSQL service
DATABASE_URL=postgres://filevault:password@host:port/database

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=10000
GIN_MODE=release

# File Storage Configuration (ephemeral for free tier)
UPLOAD_DIR=/tmp/uploads
MAX_FILE_SIZE_MB=100
DEFAULT_QUOTA_MB=1000

# Rate Limiting Configuration
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST_SIZE=200

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# API Base URL (Render will automatically set this)
REACT_APP_API_URL=https://secure-file-vault-backend.onrender.com

# Environment
NODE_ENV=production

# =============================================================================
# RENDER SPECIFIC CONFIGURATION
# =============================================================================
# These are automatically configured by Render
# PORT=10000 (automatically set by Render)
# DATABASE_URL (automatically provided by Render PostgreSQL service)
# REACT_APP_API_URL (automatically set to backend service URL)

# =============================================================================
# DEVELOPMENT CONFIGURATION (for local development)
# =============================================================================
# Uncomment these for local development
# POSTGRES_DB=filevault
# POSTGRES_USER=filevault
# POSTGRES_PASSWORD=filevault123
# POSTGRES_PORT=5433
# BACKEND_PORT=8081
# FRONTEND_PORT=3031
# NGINX_PORT=80
# NGINX_SSL_PORT=443
