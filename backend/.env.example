# Secure File Vault - Environment Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=filevault
POSTGRES_USER=filevault
POSTGRES_PASSWORD=filevault123
POSTGRES_PORT=5433
POSTGRES_HOST=db

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
# Server Configuration
BACKEND_PORT=8081
BACKEND_HOST=0.0.0.0
BACKEND_ENV=production
GIN_MODE=release

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Storage Configuration
STORAGE_PATH=/app/uploads
MAX_FILE_SIZE_MB=100

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST_SIZE=20

# User Configuration
DEFAULT_QUOTA_MB=10

# Logging
LOG_LEVEL=info

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# API Configuration
VITE_API_BASE_URL=http://localhost:8081

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_PUBLIC_FILES=true

# Build Configuration
NODE_ENV=production
FRONTEND_PORT=3031

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================
NGINX_PORT=80
NGINX_SSL_PORT=443

# =============================================================================
# DATA STORAGE
# =============================================================================
# Local data storage path (for volumes)
DATA_PATH=./data

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Uncomment and modify for development
# BACKEND_ENV=development
# GIN_MODE=debug
# LOG_LEVEL=debug
# VITE_API_BASE_URL=http://localhost:8081
# NODE_ENV=development

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Uncomment and modify for production
# BACKEND_ENV=production
# GIN_MODE=release
# LOG_LEVEL=info
# VITE_API_BASE_URL=https://yourdomain.com/api
# NODE_ENV=production

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Change these values in production!
# JWT_SECRET=your-super-secret-jwt-key-change-in-production
# POSTGRES_PASSWORD=your-secure-database-password

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Adjust based on your server capacity
# RATE_LIMIT_REQUESTS_PER_SECOND=10
# RATE_LIMIT_BURST_SIZE=20
# MAX_FILE_SIZE_MB=100
# DEFAULT_QUOTA_MB=10

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Enable detailed logging for monitoring
# LOG_LEVEL=debug

# =============================================================================
# SSL/TLS CONFIGURATION (Production)
# =============================================================================
# Uncomment and configure for production SSL
# SSL_CERT_PATH=/etc/ssl/certs/yourdomain.com.crt
# SSL_KEY_PATH=/etc/ssl/private/yourdomain.com.key
# SSL_CHAIN_PATH=/etc/ssl/certs/yourdomain.com.chain.crt

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database backup settings
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE="0 2 * * *"
# BACKUP_RETENTION_DAYS=7
# BACKUP_PATH=/backups

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Redis for caching (optional)
# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Email service (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@yourdomain.com

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker Compose project name
COMPOSE_PROJECT_NAME=secure-file-vault

# Docker build arguments
GO_VERSION=1.21
NODE_VERSION=18

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Custom network subnet (optional)
# NETWORK_SUBNET=172.20.0.0/16

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
# Health check intervals (seconds)
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log rotation settings
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# =============================================================================
# FEATURE TOGGLES
# =============================================================================
# Enable/disable specific features
ENABLE_WEBSOCKET=true
ENABLE_RATE_LIMITING=true
ENABLE_FILE_DEDUPLICATION=true
ENABLE_PUBLIC_FILES=true
ENABLE_ADMIN_PANEL=true
ENABLE_ANALYTICS=true

# =============================================================================
# CUSTOMIZATION
# =============================================================================
# Application branding
APP_NAME="Secure File Vault"
APP_VERSION="1.0.0"
APP_DESCRIPTION="A secure file storage and sharing platform"

# Default admin user (created on first run)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=admin123
